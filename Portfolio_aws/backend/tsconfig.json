{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6","dom"],
    "experimentalDecorators": false,
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types","./src/modules/customType"], 
  }
}
